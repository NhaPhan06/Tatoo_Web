@page
@model Presentaion.Pages.RegisterPage

@{
    Layout = "_LayoutLogin";
}


<section id="signup" class="mx-auto my-lg-8 my-8">

@*<head>
    <meta charset="utf-8">
    <title>Animated Login Form</title>
    <link rel="stylesheet" href="css/register.css">
</head>*@

    <div class="head">
        <h1>Register</h1>
        <span>Welcome</span>
    </div>
    <div class=" justify-content-center">
        <div class="login-wrap col-md-10 col-lg-10 col-10">
        <form method="post">

            
            
            <div class="form-group my-3">
                <label class="label" for="name">Username</label>
                <input type="text" asp-for="CreateCustomer.UserName" class="form-control" required="required">
                
                <i></i>
            </div>
             <div class="form-group my-3">
                 <label class="label" for="password">Password</label>
                 <input type="text" asp-for="CreateCustomer.Password" class="form-control" required="required">
               
                <i></i>
            </div>
            <div class="form-group my-3">
                <label class="label" for="name">Firstname</label>
                <input asp-for="CreateCustomer.FirstName" class="form-control" required="required">
                
                <i></i>
            </div>
            <div class="form-group my-3">
                <label class="label" for="name">Lastname</label>
                <input type="text" asp-for="CreateCustomer.LastName" class="form-control" required="required">
                
                <i></i>
            </div>
            <div class="form-group my-3">
                    <label class="label" for="email">Email</label>
                <input type="text" asp-for="CreateCustomer.Email" class="form-control" required="required">
                
                <span asp-validation-for="CreateCustomer.Email" class="text-danger"></span>
                <i></i>
            </div>
            <div class="form-group my-3">
                <label asp-for="CreateCustomer.DateOfBirth" class="control-label"></label>
                <input asp-for="CreateCustomer.DateOfBirth.Date" type="date" class="form-control"/>
                <span asp-validation-for="CreateCustomer.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label class="label" for="Phone">Phone</label>
                <input type="text" asp-for="CreateCustomer.Phone" class="form-control" required="required">
                
                <i></i>
                <span asp-validation-for="CreateCustomer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label class="label" for="address">Address</label>
                <input type="text" asp-for="CreateCustomer.Address" class="form-control" required="required">
                
                <i></i>
            </div>
            <div class="d-flex justify-content-start mt-4">
                    <button type="submit" value="Create" class="btn btn-primary submit px-3">Register</button>
            </div>
        
        </form>
        </div>
        
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }