@page
@model Presentaion.Pages.Profile.EditModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Update Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.Account.UserName" class="control-label"></label>
                <input asp-for="Customer.Account.UserName" class="form-control" />
                <span asp-validation-for="Customer.Account.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label"></label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Account.Email" class="control-label"></label>
                <input asp-for="Customer.Account.Email" class="form-control" />
                <span asp-validation-for="Customer.Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Account.Phone" class="control-label"></label>
                <input asp-for="Customer.Account.Phone" class="form-control" />
                <span asp-validation-for="Customer.Account.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Account.DateOfBirth" class="control-label"></label>
                <input asp-for="Customer.Account.DateOfBirth" class="form-control" />
                <span asp-validation-for="Customer.Account.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Profile/Index">Back to List</a>
</div>
