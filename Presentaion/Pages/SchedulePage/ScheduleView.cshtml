                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Booking List</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                            <tr>
                                                <th>Customer Name</th>
                                                <th>Phone</th>
                                                <th>Description</th>
                                                <th>Status</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Bookings.Count; i++)
                                            {
                                            <tr>
                                                <td>@Model.Customers[i].FirstName</td>
                                                <td>@Model.Accounts[i].Phone</td>
                                                <td>@Model.Bookings[i].Description</td>
                                                @if (Model.Bookings[i].Status == "DONE")
                                                {
                                                    <td style="color: green">DONE</td>
                                                }
                                                else if (Model.Bookings[i].Status == "ONPROCESS")
                                                {
                                                    <td style="color: orangered">ONPROCESS</td>
                                                }
                                                else if (Model.Bookings[i].Status == "CANCEL")
                                                {
                                                    <td style="color: red">Cancel</td>
                                                } else
                                                {
                                                    <td style="color: red">NULL</td>
                                                }
                                                @if (Model.Bookings[i].Status != "CANCEL") 
                                                {
                                                <td style="text-align:center">
                                                    <a asp-page="./ScheduleCreate" class="btn btn-rounded btn-primary" asp-route-id="@Model.Bookings[i].Id">Create</a>
                                                </td>
                                                <td style="text-align:center">
                                                    <a asp-page-handler="bookingcancel" class="btn btn-rounded btn-danger" asp-route-id="@Model.Bookings[i].Id">Cancel</a>
                                                </td>
                                                }
                                            </tr>                                              
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <!-- ============================================================== -->
                        <!-- basic table  -->
                        <!-- ============================================================== -->
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="card-header">Schedule List</h5>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered first">
                                            <thead>
                                                <tr>
                                                    <th>Booking ID</th>
                                                    <th>Date</th>
                                                    <th>Start Time</th>
                                                    <th>End Time</th>
                                                    <th>Status</th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Schedulings)
                                                {
                                                    <tr>
                                                        <td>@item.BookingId</td>
                                                        <td>@item.Date</td>
                                                        <td>@item.StartTime</td>
                                                        <td>@item.EndTime</td>
                                                        @if (item.Status == "DONE")
                                                        {
                                                            <td style="color: green">DONE</td>
                                                        }
                                                        else if (item.Status == "ONPROCESS")
                                                        {
                                                            <td style="color: orangered">ONPROCESS</td>
                                                        }
                                                        else if (item.Status == "CANCEL")
                                                        {
                                                            <td style="color: red">CANCEL</td>
                                                        }
                                                        else
                                                        {
                                                            <td style="color: red">NULL</td>
                                                        }
                                                        @if (item.Status != "CANCEL") 
                                                        {
                                                        <td style="text-align:center">
                                                            <a asp-page="./ScheduleUpdate" class="btn btn-rounded btn-primary" asp-route-id="@item.Id">Update</a>
                                                        </td>
                                                        <td style="text-align:center">
                                                            <a asp-page-handler="cancel" class="btn btn-rounded btn-danger" asp-route-id="@item.Id">Cancel</a>
                                                        </td>
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
