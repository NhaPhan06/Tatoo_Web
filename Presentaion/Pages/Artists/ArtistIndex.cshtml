@page
@model Presentaion.Pages.Artists.ArtistIndexModel
@{
    ViewData["Title"] = "ArtistIndex";
    Layout = "_LayoutLogin";
}
<h1>Artist List</h1>
<form method="get">
    <div class="form-group">
        <label for="Query">Search name:</label>
        <input type="text" asp-for="SearchQuery" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Tìm</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Studio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Experience)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Studio.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>               
                <td>
                    <a asp-page="./ArtistEdit" asp-route-id="@item.Id">Edit</a> 
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>