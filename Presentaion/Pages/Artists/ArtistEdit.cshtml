                <span asp-validation-for="Artist.StudioId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Artist.Experience" class="control-label"></label>
                <input asp-for="Artist.Experience" class="form-control" />
                <span asp-validation-for="Artist.Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
